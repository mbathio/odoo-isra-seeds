<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vue Liste Productions -->
        <record id="view_production_tree" model="ir.ui.view">
            <field name="name">seed.production.tree</field>
            <field name="model">seed.production</field>
            <field name="arch" type="xml">
                <tree string="Productions de Semences">
                    <field name="name"/>
                    <field name="seed_lot_id"/>
                    <field name="multiplier_id"/>
                    <field name="start_date"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Vue Formulaire Productions -->
        <record id="view_production_form" model="ir.ui.view">
            <field name="name">seed.production.form</field>
            <field name="model">seed.production</field>
            <field name="arch" type="xml">
                <form string="Production de Semences">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="seed_lot_id"/>
                                <field name="multiplier_id"/>
                                <field name="parcel_id"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="status"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="planned_quantity"/>
                                <field name="actual_yield"/>
                            </group>
                            <group>
                                <field name="sowing_date"/>
                                <field name="harvest_date"/>
                            </group>
                        </group>
                        
                        <field name="notes" placeholder="Notes..."/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action Productions -->
        <record id="action_production" model="ir.actions.act_window">
            <field name="name">Productions de Semences</field>
            <field name="res_model">seed.production</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Vue Contrats -->
        <record id="view_contract_tree" model="ir.ui.view">
            <field name="name">seed.contract.tree</field>
            <field name="model">seed.contract</field>
            <field name="arch" type="xml">
                <tree string="Contrats">
                    <field name="name"/>
                    <field name="multiplier_id"/>
                    <field name="variety_id"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="view_contract_form" model="ir.ui.view">
            <field name="name">seed.contract.form</field>
            <field name="model">seed.contract</field>
            <field name="arch" type="xml">
                <form string="Contrat">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="multiplier_id"/>
                            <field name="variety_id"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_contract" model="ir.actions.act_window">
            <field name="name">Contrats</field>
            <field name="res_model">seed.contract</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>