<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Vérification alertes toutes les heures -->
        <record id="cron_check_alerts" model="ir.cron">
            <field name="name">Vérifier Alertes Semences</field>
            <field name="model_id" ref="model_seed_alert"/>
            <field name="state">code</field>
            <field name="code">model.check_all_alerts()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
        </record>
        
        <!-- Récupération données météo (2x/jour) -->
        <record id="cron_fetch_weather" model="ir.cron">
            <field name="name">Récupérer Données Météo</field>
            <field name="model_id" ref="model_seed_weather_service"/>
            <field name="state">code</field>
            <field name="code">model.auto_fetch_weather_for_productions()</field>
            <field name="interval_number">12</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
        </record>
        
        <!-- Vérification alertes météo (quotidien) -->
        <record id="cron_weather_alerts" model="ir.cron">
            <field name="name">Vérifier Alertes Météo</field>
            <field name="model_id" ref="model_seed_weather_alert"/>
            <field name="state">code</field>
            <field name="code">model.check_weather_alerts()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>
        
        <!-- Nettoyage logs audit (hebdomadaire) -->
        <record id="cron_cleanup_audit_logs" model="ir.cron">
            <field name="name">Nettoyer Logs d'Audit</field>
            <field name="model_id" ref="model_seed_audit_log"/>
            <field name="state">code</field>
            <field name="code">model.cleanup_old_logs(365)</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="active">True</field>
        </record>
        
    </data>
</odoo>